<h2>Game ID: <%= @game.id %></h2>

<p>Current Turn: <%= @game.current_turn %></p>
<p>
  It's
  <strong><%= @game.current_turn_player&.name || 'Unknown' %></strong>'s turn.
</p>

<%= button_to "Next Turn", advance_turn_game_path(@game), method: :post,
      class: "mt-3 px-4 py-2 bg-indigo-600 text-white rounded" %>

<h3>Players:</h3>
<ul>
  <% @players.each do |player| %>
    <li>
      <strong><%= player.name %></strong> - <%= player.role %> at
      <%= player.player_position.location.name %>
    </li>
  <% end %>
</ul>

<h3>Available Cards:</h3>
<ul>
  <% @cards.each do |card| %>
    <li><%= card.card_type %>: <%= card.content %></li>
  <% end %>
</ul>

<h3>Locations:</h3>
<ul>
  <% @locations.each do |loc| %>
    <li><%= loc.name %> (<%= loc.x %>, <%= loc.y %>)</li>
  <% end %>
</ul>
